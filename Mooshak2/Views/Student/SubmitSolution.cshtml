@model List<Mooshak2.Models.ViewModels.MilestoneViewModel>

@{
    ViewBag.Title = "SubmitSolution";
}

<h2>Submit Solution</h2>

@using (Html.BeginForm("SubmitSolution", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <legend>Descriptions</legend>

    <div class="form-group">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Milestone Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>
                            <a href="~/Content/Submissions/@Html.DisplayFor(modelItem => item.AssignmentDescriptionFileName)" download>
                                <img border="0" src="~/Content/Pictures/ExampleOfaFile.png" alt="file" width="15" height="20">
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <legend>Submit Solution</legend>

    <div class="form-group">
        <label>
            Select Milestone
            <select name="MilestoneID" class="form-control" id="SelectedMilestone">

                @foreach (var item in Model)
                {
                    <option value="@Html.DisplayFor(modelItem => item.ID)">
                        @Html.DisplayFor(modelItem => item.Title)
                    </option>
                }

            </select>
        </label>
    </div>
    

    <div class="form-group">
        <input type="file" name="SubmissionFile" />
        <p class="help-block">Select file from your computer...</p>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-info" value="Submit">
    </div>
}
