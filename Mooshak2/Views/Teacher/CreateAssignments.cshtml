
@model List<Mooshak2.Models.ViewModels.CourseViewModel>

@{
    ViewBag.Title = "CreateAssignments";
}

@using (Html.BeginForm("CreateAssignments", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>Create Assignment</legend>

        <div class="form-group">
            <label>
                Course
                <select name="CourseID" class="form-control">

                    @foreach (var item in Model)
                    {
                        <option value="@Html.DisplayFor(modelItem => item.ID)">
                            @Html.DisplayFor(modelItem => item.Name)
                        </option>
                    }

                </select>
            </label>
        </div>

        <div class="form-group">
            <label>
                Title
                <input type="text" class="form-control" id="Title" name="Title">
            </label>
        </div>

        <div class="form-group">
            <label>
                Open
                <input type="datetime-local" class="form-control" id="Open" name="StartDate">
            </label>
        </div>

        <div class="form-group">
            <label>
                Close
                <input type="datetime-local" class="form-control" id="DueDate" name="DueDate">
            </label>
        </div>

        <div class="form-group">
            <label>
                Language
                <select name="Languages" class="form-control">
                    <option value="Cpp">C++</option>
                </select>
            </label>
        </div>

        <div class="form-group">
            <label>
                Group size
                <select name="GroupSize" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </label>
        </div>

        <div>
            <label>
                Description
                <input type="file" name="DescriptionFile" />
            </label>
        </div>


        <legend>Milestone</legend>

        <div class="form-group">
            <label>
                Milestone Title
                <input type="text" class="form-control" name="MilestoneTitle">
            </label>
        </div>

		<div class="form-group">
			<label>
				Percentage
				<input type="text" class="form-control" name="MilestonePercentage">
			</label>
		</div>

        <div class="form-group">
            <label>
                Submission limit
                <select name="SubmissionLimit" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </label>
        </div>

        <div class="form-group input-pairs">
            <label>
                Input
                <input type="text" class="form-control" name="MilestoneInput1">
            </label>
            <label>
                Expected Output
                <input type="text" class="form-control" name="MilestoneOutput1">
            </label>
        </div>

        <!--<input type="button" class="btn btn-info addmilestone" value="Add another Milestone">-->

        <input type="submit" class="btn btn-info" value="Create Assignment">

    </fieldset>
}

<br />


