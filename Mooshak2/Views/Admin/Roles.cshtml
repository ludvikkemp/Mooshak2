@model IEnumerable<Mooshak2.Models.RoleViewModel>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<p>
	@Html.ActionLink("Create Role", "CreateRole", null, new { @class = "btn btn-info" })
</p>
<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Role</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.RoleName)</td>
					<td>
						@if (item.RoleName.ToLower() != "administrator")
				{
							@Html.ActionLink("Delete", "DeleteUserRole",
				   new { RoleName = item.RoleName },
				   new
				   {
					   onclick =
				   "return confirm('Are you sure you wish to delete this role?');"
				   })
				}
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

