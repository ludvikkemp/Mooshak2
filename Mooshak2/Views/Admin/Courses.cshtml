@model List<Mooshak2.Models.ViewModels.CourseViewModel>

@{
    ViewBag.Title = "Courses";
}

<br />
<p>
	@Html.ActionLink("Create Course", "CreateCourse", null, new { @class = "btn btn-info" })

</p>
<br />

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Courses</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.Name)</td>
					<td>
						@Html.ActionLink("Users", "ConnectUsers", new { courseID = item.ID } ) |
						@Html.ActionLink("Delete", "DeleteCourse", new { Name = item.Name },
							new { onclick = "return confirm('Are you sure you wish to delete this course?');" })
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>