<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mooshak 2.0</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="navbartop">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mooshak 2.0", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


					@if (User.IsInRole("Administrator"))
					{
						<li>@Html.ActionLink("Administrator", "Index", "Home")</li>
					}
					@if (User.IsInRole("Teacher"))
					{
						<li>@Html.ActionLink("Teacher", "Index", "Home")</li>
					}
					@if (User.IsInRole("Student"))
					{
						<li>@Html.ActionLink("Student", "Index", "Home")</li>
					}

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-3 col-md-2 sidebar" id="navsidebar">
				
				<ul class="nav nav-sidebar">
					@if (User.IsInRole("Administrator"))
					{
						<li><p class="role-title">Admin</p></li>
						<li>@Html.ActionLink("Courses", "Courses", "Admin")</li>
						<li>@Html.ActionLink("Users", "Users", "Admin")</li>
						<li>@Html.ActionLink("Roles", "Roles", "Admin")</li>
					}
				</ul>

				<ul class="nav nav-sidebar">
					@if (User.IsInRole("Teacher"))
					{
						<li><p class="role-title">Teachers</p></li>
						<li>@Html.ActionLink("Assignments", "Assignments", "Teacher")</li>
						<li>@Html.ActionLink("Submissions", "Submissions", "Teacher")</li>
					}
				</ul>

				<ul class="nav nav-sidebar">
					@if (User.IsInRole("Student"))
					{
						<li><p class="role-title">Students</p></li>
						<li>@Html.ActionLink("Submit Solution", "SubmitSolution", "Student")</li>
                        <li>@Html.ActionLink("Your Submissions", "YourSubmissions", "Student")</li>
					}
				</ul>
			</div>


			<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

				@RenderBody()

				<hr />
				<footer>
					<p>&copy; @DateTime.Now.Year - Mooshak 2.0</p>
				</footer>
			</div>
		</div>
	</div>

		@Scripts.Render("~/bundles/jquery")
		@Scripts.Render("~/bundles/bootstrap")
		@RenderSection("scripts", required: false)
        <script type="text/javascript" src="@Url.Content("~/Scripts/CreateAssignment.js")"></script>
        <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
</body>
</html>
